<div class="container">

  <div class="row">

    <div class="col-md-12">
      <h1>Eat-Da-Burger!</h1>
    </div>
  </div>

    <div class="row">
      <div class="col-md-4" id="ready-to-eat">
        <h2>Ready To Devour!</h2>
        <p>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burger/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </p>
      </div>
      <div class="col-md-4" id="burger-img">
        <img src="assets/img/burger.png" alt="burger" />
      </div>
      <div class="col-md-4" id="devoured-section">
        <h2>Devoured Burgers</h2>
        <p>
          {{#each burgers}}
          {{#if devoured}}
          {{> burger/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12" id="add-burger">
        <h2>Add-Da-Burger!</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burg">Burger:</label>
            <input type="text" id="burg" name="name">
          </div>
          <button type="submit">Add Burger!</button>
        </form>
      </div>
    </div>

  </div>
</div>